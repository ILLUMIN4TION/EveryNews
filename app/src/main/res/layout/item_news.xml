<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- 뉴스 썸네일 -->
    <ImageView
        android:id="@+id/iv_defaul_news_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/star_off" />

    <TextView
        android:id="@+id/tv_default_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tech Giants Battle for AI Supremacy"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"/>
    <TextView
        android:id="@+id/tv_default_news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The race to dominate AI technology is heating up..."
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_comment"
            app:tint="#E0E0E0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="74"
            android:textColor="#E0E0E0"
            android:layout_marginStart="4dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_bookmark"
            app:tint="#E0E0E0"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_more_horiz"
            app:tint="#E0E0E0"/>
    </LinearLayout>

</LinearLayout>
